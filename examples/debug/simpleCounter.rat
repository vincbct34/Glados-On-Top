proc Counter(initial) {
    state: initial,
    receive {
        | :increment -> state = state + 1
        | (:get, sender) -> sender <- state
    }
}

let counter = spawn Counter(0)
counter <- :increment
print("Sent first increment")
counter <- (:get, self)
print("Sent get request")

receive {
    | value -> print("Received value: " ++ value)
}
